# Coverage configuration for BenchMARL
[run]
source = benchmarl
omit =
    # Exclude examples directory
    */examples/*
    # Exclude docs
    */docs/*
    # Exclude notebooks
    */notebooks/*
    # Exclude fine-tuned scripts
    */fine_tuned/*
    # Exclude test files
    */test/*
    # Exclude configuration files
    */conf/*
    # Exclude init files (usually just imports)
    */__init__.py

[report]
# Regexes for lines to exclude from consideration
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code:
    def __repr__
    def __str__

    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError
    raise ValueError
    raise TypeError

    # Don't complain if non-runnable code isn't run:
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod

    # Don't complain about type checking imports
    if typing.TYPE_CHECKING:

# Show missing lines in terminal output
show_missing = True

# Skip covered files in the report
skip_covered = False

# Precision for coverage percentage
precision = 2

# Sort the report by the percentage covered
sort = Cover

[html]
directory = .local/coverage/html
title = BenchMARL Coverage Report

[json]
output = .local/coverage/coverage.json
pretty_print = true
show_contexts = true

[xml]
output = .local/coverage/coverage.xml

# Coverage targets for core modules
# These are informational and enforced through CI checks
# Overall target: 90% coverage
# Core modules (algorithms, models, experiment, utils): 90% minimum
# Environment wrappers: 80% minimum (lower priority due to external dependencies)
